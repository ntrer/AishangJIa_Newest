<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#E9EDF5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


 <RelativeLayout
     android:background="@drawable/linear_border2"
     android:gravity="center_vertical"
     android:layout_width="match_parent"
     android:layout_marginLeft="@dimen/dp_15"
     android:layout_marginRight="@dimen/dp_15"
     android:layout_marginBottom="@dimen/dp_15"
     android:layout_height="@dimen/dp_199">
<LinearLayout
android:orientation="vertical"
android:layout_width="@dimen/dp_60"
android:layout_marginBottom="@dimen/dp_20"
android:layout_marginTop="@dimen/dp_20"
android:layout_marginLeft="@dimen/dp_20"
android:layout_height="match_parent">

<TextView
android:id="@+id/activity_count"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/dp_3"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:text="活动次数"
/>

<TextView
android:id="@+id/chengjiaoliang"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="总成交量"
/>

<TextView
android:id="@+id/chengjiaoe"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:layout_marginBottom="@dimen/dp_3"
android:textColor="#333"
android:text="总成交额"
/>

<TextView
android:id="@+id/pingjun_chengjiaoe"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="平均成交额"
/>
<TextView
android:id="@+id/sign_count"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="签到次数"
/>
<TextView
android:id="@+id/genjin_count"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="跟进次数"
/>
<TextView
android:id="@+id/quitcard_count"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="退卡次数"
/>
<TextView
android:id="@+id/quirdan_count"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#333"
android:layout_marginBottom="@dimen/dp_3"
android:text="退单次数"
/>

</LinearLayout>

<LinearLayout
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_marginBottom="@dimen/dp_20"
android:layout_marginTop="@dimen/dp_20"
android:layout_marginRight="@dimen/dp_20"
android:layout_alignParentRight="true"
android:gravity="right"
android:layout_height="match_parent">


<TextView
android:id="@+id/activity_count_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/dp_3"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:gravity="right"
android:text="5"
/>

<TextView
android:id="@+id/chengjiaoliang_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="10次"
/>

<TextView
android:id="@+id/chengjiaoe_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:layout_marginBottom="@dimen/dp_3"
android:textColor="#999"
android:text="10000000.00元"
android:maxLines="1"
/>

<TextView
android:id="@+id/pingjun_chengjiaoe_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="5000.00元"
/>
<TextView
android:id="@+id/sign_count_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="5"
/>
<TextView
android:id="@+id/genjin_count_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="10"
/>
<TextView
android:id="@+id/quitcard_count_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="1"
/>
<TextView
android:id="@+id/quirdan_count_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="@dimen/sp_12"
android:textColor="#999"
android:layout_marginBottom="@dimen/dp_3"
android:text="1"
/>


</LinearLayout>
 </RelativeLayout>

</RelativeLayout>